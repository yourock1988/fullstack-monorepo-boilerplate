{
  "root": true,
  "env": {
    "browser": true,
    "es2024": true
  },
  "parserOptions": {
    "ecmaVersion": 2024,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/", "lib/", "dist/", "build/"],
  "extends": ["airbnb-base", "plugin:vue/vue3-recommended", "prettier"],
  "rules": {
    "vue/no-undef-properties": "warn",
    "vue/no-unused-properties": [
      "warn",
      {
        "groups": ["props", "data", "computed", "methods", "setup"]
      }
    ]
  }
}
